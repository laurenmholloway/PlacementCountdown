                    <h3>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h3>
                    <p>Position: @Html.DisplayFor(modelItem => item.JobTitle)</p>
                    <p>Company: @Html.DisplayFor(modelItem => item.CompanyName)</p>
                    <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                    <p>@Html.DisplayFor(modelItem => item.PlacementStatus)
                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StudentID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StudentID })
                </p>
            </div>
        </div>
    </div>

